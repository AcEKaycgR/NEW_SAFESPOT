# Cache settings
cache-max=3600000
cache-min=600000

# Registry settings
registry=https://registry.npmjs.org/

# Save exact versions
save-exact=true

# Ignore scripts during install for security
ignore-scripts=false

# Enable package lock
package-lock=true

# Progress bar
progress=true

# Log level
loglevel=notice

# Configure audit
audit=true
audit-level=moderate

# Configure funding
funding=true